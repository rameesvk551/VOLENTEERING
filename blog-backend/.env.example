# Backend Environment Configuration
# Copy this file to .env and configure with your actual values
# Referenced in claude.md: Backend configuration for MongoDB, server, and logging

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/nomadic-nook-blog
MONGODB_TEST_URI=mongodb://localhost:27017/nomadic-nook-blog-test

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
JWT_SECRET=your-secret-key-change-this
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CMS Sync (Optional)
CMS_WEBHOOK_SECRET=your-webhook-secret
CMS_SYNC_ENABLED=false
