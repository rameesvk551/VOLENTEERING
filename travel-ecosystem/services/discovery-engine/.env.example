# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# OpenRouter Configuration (Alternative to OpenAI)
# Get your API key from: https://openrouter.ai/keys
OPENAI_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Base URL (this makes it use OpenRouter instead of OpenAI)
OPENAI_API_BASE=https://openrouter.ai/api/v1

# Model Selection - OpenRouter Models
# FREE MODELS (Recommended to start):
#   - google/gemini-2.0-flash-001 (Fast, good quality, FREE)
#   - meta-llama/llama-3.1-8b-instruct:free (Fast, FREE)
# PAID MODELS (Better quality):
#   - openai/gpt-4o-mini (Best OpenAI, ~$0.15/1M tokens)
#   - anthropic/claude-3.5-sonnet (Best Claude, ~$3/1M tokens)
OPENAI_MODEL=google/gemini-2.0-flash-001
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Optional: OpenRouter specific headers
OPENROUTER_APP_NAME=Travel-Discovery-Engine
OPENROUTER_SITE_URL=http://localhost:3000

# Tavily AI Configuration (for real-time web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Google Places API Configuration (for REAL attractions with images & coordinates)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Geocoding API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/travel_discovery
MONGODB_DB_NAME=travel_discovery

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Cache Configuration
CACHE_TTL_QUERY_RESULT=3600
CACHE_TTL_ENTITY_DETAIL=86400
CACHE_TTL_RECOMMENDATIONS=1800

# Crawler Configuration
CRAWLER_RATE_LIMIT=10
CRAWLER_CONCURRENT_REQUESTS=5
CRAWLER_USER_AGENT=TravelDiscoveryBot/1.0

# Feature Flags
ENABLE_STREAMING=true
ENABLE_GRAPH_RECOMMENDATIONS=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
