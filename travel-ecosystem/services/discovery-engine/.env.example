# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Tavily AI Configuration (for real-time web search)
TAVILY_API_KEY=your_tavily_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/travel_discovery
MONGODB_DB_NAME=travel_discovery

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Cache Configuration
CACHE_TTL_QUERY_RESULT=3600
CACHE_TTL_ENTITY_DETAIL=86400
CACHE_TTL_RECOMMENDATIONS=1800

# Crawler Configuration
CRAWLER_RATE_LIMIT=10
CRAWLER_CONCURRENT_REQUESTS=5
CRAWLER_USER_AGENT=TravelDiscoveryBot/1.0

# Feature Flags
ENABLE_STREAMING=true
ENABLE_GRAPH_RECOMMENDATIONS=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
