{
  "name": "travel-ecosystem",
  "version": "1.0.0",
  "description": "Micro-frontend architecture for travel ecosystem applications",
  "private": true,
  "workspaces": [
    "shell",
    "apps/*",
    "shared"
  ],
  "scripts": {
    "dev:shell": "cd shell && npm run dev",
    "dev:blog": "cd apps/blog && npm run dev",
    "dev:visa": "cd apps/visa-explorer && npm run dev",
    "dev:trip": "cd apps/trip-planner && npm run dev",
    "dev": "./start-dev.sh",
    "build:shell": "cd shell && npm run build",
    "build:blog": "cd apps/blog && npm run build",
    "build:visa": "cd apps/visa-explorer && npm run build",
    "build:trip": "cd apps/trip-planner && npm run build",
    "build:all": "npm run build:shell && npm run build:blog && npm run build:visa && npm run build:trip",
    "install:all": "npm install && cd shell && npm install && cd ../apps/blog && npm install && cd ../visa-explorer && npm install && cd ../trip-planner && npm install",
    "clean": "rm -rf shell/node_modules shell/dist apps/*/node_modules apps/*/dist",
    "docker:dev": "cd docker && docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "cd docker && docker-compose up",
    "docker:build": "cd docker && docker-compose build",
    "docker:down": "cd docker && docker-compose down"
  },
  "keywords": [
    "micro-frontend",
    "module-federation",
    "travel",
    "react",
    "vite",
    "typescript"
  ],
  "author": "Travel Ecosystem Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
