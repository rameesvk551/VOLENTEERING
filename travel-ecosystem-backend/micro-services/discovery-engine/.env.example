# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ===================================================
# API KEYS - NO AI REQUIRED
# Discovery Engine uses real APIs for data fetching
# ===================================================

# Google Places API (REQUIRED for attractions data)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Geocoding API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# OpenWeather API (REQUIRED for weather data)
# Get your free API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# RapidAPI Key (OPTIONAL for hotel data)
# Get your key from: https://rapidapi.com
RAPIDAPI_KEY=your_rapidapi_key_here

# Tavily API (OPTIONAL for web crawling/travel articles)
# Get your API key from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/travel_discovery
MONGODB_DB_NAME=travel_discovery

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Cache Configuration
CACHE_TTL_QUERY_RESULT=3600
CACHE_TTL_ENTITY_DETAIL=86400
CACHE_TTL_RECOMMENDATIONS=1800

# Crawler Configuration
CRAWLER_RATE_LIMIT=10
CRAWLER_CONCURRENT_REQUESTS=5
CRAWLER_USER_AGENT=TravelDiscoveryBot/1.0

# Feature Flags
ENABLE_STREAMING=true
ENABLE_GRAPH_RECOMMENDATIONS=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Microservice Endpoints (HTTP fallback)
WEATHER_SERVICE_URL=http://localhost:4001
HOTEL_SERVICE_URL=http://localhost:4002
VISA_SERVICE_URL=http://localhost:4003
TRAVEL_DATA_SERVICE_URL=http://localhost:4004

# Kafka Messaging
KAFKA_ENABLED=true
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=discovery-engine
KAFKA_GROUP_ID=discovery-engine-consumer
DISCOVERY_REPLY_TOPIC=discovery.responses
WEATHER_REQUEST_TOPIC=weather.requests
HOTEL_REQUEST_TOPIC=hotel.requests
VISA_REQUEST_TOPIC=visa.requests
TRAVEL_DATA_REQUEST_TOPIC=travel-data.requests
KAFKA_REQUEST_TIMEOUT_MS=8000
