# Server Configuration
PORT=4004
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:1001,http://localhost:1002

# Cache Configuration
CACHE_TTL_SEARCH=300
CACHE_TTL_DETAILS=600
CACHE_MAX_KEYS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=5000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Provider API Keys (Optional - system works with mock data if not provided)
GETYOURGUIDE_API_KEY=
VIATOR_API_KEY=
KLOOK_API_KEY=

# Provider API URLs
GETYOURGUIDE_API_URL=https://api.getyourguide.com/1
VIATOR_API_URL=https://api.viator.com
KLOOK_API_URL=https://api.klook.com

# Affiliate Configuration
GETYOURGUIDE_AFFILIATE_ID=
VIATOR_AFFILIATE_ID=
KLOOK_AFFILIATE_ID=

# Analytics Event Bus (Optional - for emitting tracking events)
ANALYTICS_SERVICE_URL=http://localhost:4010
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=info
